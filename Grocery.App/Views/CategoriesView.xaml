<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Grocery.App.Views.CategoriesView"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Grocery.App.ViewModels"
    xmlns:groceryCore="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
    x:DataType="vm:CategoriesViewModel"
    Title="CategorieÃ«n">

    <CollectionView ItemsSource="{Binding Categories}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="groceryCore:Category">
                <Grid Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label Text="{Binding Name}" VerticalOptions="Center"/>
                    <Button Text="Bekijk"
                            Grid.Column="1"
                            Command="{Binding Source={x:Reference RootPage}, Path=BindingContext.SelectCategoryCommand}"
                            CommandParameter="{Binding .}" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
